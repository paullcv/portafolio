---
import { EDUCATION } from "@/data/education";
import Badge from "./Badge.astro";
---

<div class="mx-auto max-w-4xl py-10">
  <h2 class="text-3xl font-bold mb-8 text-center text-black/80 dark:text-white">Formación Académica</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {
      EDUCATION.map(({ title, institution, year, tags }) => (
        <div class="rounded-xl border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 p-6 shadow-md">
          <h3 class="text-xl font-semibold text-black/90 dark:text-white">{title}</h3>
          <p class="text-sm text-gray-600 dark:text-gray-300">{institution} • {year}</p>
          <div class="mt-3 flex flex-wrap gap-2">
            {tags.map((tag) => (
              <Badge>{tag.name}</Badge>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</div>
